<h1>Add New Song</h1>

<form action="/songs" method="POST">
<label>Song Name:</label>
<input type="text" id="Name" name="song[name]">
<br><br>

<label>Artist Name</label>
<input type="text" id="Artist Name" name="artist[name]">
<br><br>

<label>Genres</label>
<br>
<% Genre.all.each do |g| %>
<input type="checkbox" name="song[genre_ids][]" value="<%=g.id%>" id="<%=g.name%>"> <%=g.name%> </input>
<br>
<% end %>

<input type="submit" value="Create">
</form>
