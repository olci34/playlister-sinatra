<h1>Add New Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
<input type="hidden" id="hidden" name="_method" value="PATCH">
<label>Song Name:</label>
<input type="text" id="Name" name="song[name]" value="<%=@song.name%>">
<br><br>

<label>Artist Name</label>
<input type="text" id="Artist Name" name="artist[name]" value="<%=@song.artist.name%>">
<br><br>

<label>Genres</label>
<br>
<% Genre.all.each do |g| %>
<input type="checkbox" name="song[genre_ids][]" value="<%=g.id%>" id="<%=g.name%>" <%='checked' if @song.genres.include?(g)%>> <%=g.name%> </input>
<br>
<% end %>

<input type="submit" value="Save">
</form>

